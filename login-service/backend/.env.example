# ===============================================
# SERVER CONFIGURATION
# ===============================================
PORT=5000
NODE_ENV=development

# ===============================================
# DATABASE CONFIGURATION (PostgreSQL)
# ===============================================
DB_USER=postgres
DB_HOST=localhost
DB_NAME=university_platform
DB_PASSWORD=admin123
DB_PORT=5432

# ===============================================
# JWT CONFIGURATION
# ===============================================
# IMPORTANT: Change this in production!
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production_min_32_characters
JWT_EXPIRES_IN=24h

# ===============================================
# EMAIL CONFIGURATION (SMTP)
# ===============================================
# Gmail SMTP Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

# Your email credentials
# For Gmail, use App Password (recommended)
# https://support.google.com/accounts/answer/185833
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password-or-email-password

# ===============================================
# APPLICATION URLS
# ===============================================
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:5000

# ===============================================
# NOTES
# ===============================================
# 1. Never commit this file with real credentials
# 2. Create .env file from this template
# 3. Update with your actual credentials
# 4. For Gmail: Use App Password instead of regular password
# 5. JWT_SECRET should be at least 32 characters in production
